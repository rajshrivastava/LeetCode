class Solution:
    def gameOfLife(self, board: List[List[int]]) -> None:
        """
        Do not return anything, modify board in-place instead.
        """
        def state(i, j):
            alive = 0
            if i>0:
                if j>0 and abs(board[i-1][j-1]) == 1:
                    alive += 1
                if abs(board[i-1][j]) == 1:
                    alive += 1
                if j<c-1 and abs(board[i-1][j+1]) == 1:
                    alive += 1
            
            if j>0 and abs(board[i][j-1]) == 1:
                alive += 1
            
            if j<c-1 and abs(board[i][j+1]) == 1:
                alive += 1
            
            if i<r-1:
                if j>0 and abs(board[i+1][j-1]) == 1:
                    alive += 1
                if abs(board[i+1][j]) == 1:
                    alive += 1
                if j<c-1 and abs(board[i+1][j+1]) == 1:
                    alive += 1
    
            if board[i][j] == 1:
                if alive < 2 or alive > 3:
                    board[i][j] = -1
            else:
                if alive == 3:
                    board[i][j] = 2
                
        r = len(board)
        c = len(board[0])        
        
        for i in range(r):
            for j in range(c):
                state(i, j)

        for i in range(r):
            for j in range(c):
                if board[i][j]>0:
                    board[i][j] = 1
                else:
                    board[i][j] = 0
