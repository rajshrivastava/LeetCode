class Solution:
    def convert(self, s: str, numRows: int) -> str:
        arr = []
        length =len(s)
        numRows = min(numRows, length)
        if length == 0 or length == 1 or numRows == 1: return s
        for i in range(numRows):
            arr.append("")
            
        rowIndex = 0
        begin = 0
        for j in range(begin, begin+numRows):
            if j>=length: break
            arr[rowIndex] += s[j]
            rowIndex += 1

        begin = begin+numRows
        rowIndex = numRows - 2
        for j in range(begin, begin + numRows-2):
            if j>=length: break
            arr[rowIndex] += s[j]
            rowIndex -= 1
        
        i = (numRows-1)*2
        while i<length:
            rowIndex = 0
            begin = i
            for j in range(begin, begin+numRows):
                if j>=length: break
                arr[rowIndex] += s[j]
                rowIndex += 1
            
            begin = begin+numRows
            #print(begin)
            rowIndex = numRows - 2
            for j in range(begin, begin + numRows-2):
                if j>=length: break
                arr[rowIndex] += s[j]
                rowIndex -= 1
                
            i += (numRows-1)*2
            
        outString = ""
        
        #for rowIndex in range(numRows):
            #print(arr[rowIndex])
        for rowIndex in range(numRows):
            outString += arr[rowIndex]
        
        return outString
        
